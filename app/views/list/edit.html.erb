<%= render 'shared/flash_messages' %> 

<div class="container-list">
    <%= form_with model: @list, url: { action: :update }, class: "edit_list", local: true do |f| %>
      <%
=begin%>
 <% if @list.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %> 
<%
=end%>
      <div class="form-group">
        <h2><%= f.label :リストタイトル %></h2>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "リスト名を入力してください", required: true, minlength: '1', maxlength: '255' %>
      </div>

      <div class="form-group">
        <h2><%= f.label :"リストの状態: 完了 or 未完了" %></h2>
        <%= f.select :completed, [['未完了',0],['完了',1]], {}, class: 'form-control', id: 'list_completed' %>
      </div>

      <div class="text-center">
        <%= f.submit "編集する", class: "btn btn-success btn-lg sub-btn" %>
        <%= link_to '戻る', list_index_path, class: "btn btn-lg btn-secondary sub-btn" %>
      </div>
    <% end %>
</div>