<%= render 'shared/flash_messages' %> 

<div class="nav">
  <% if @show %>
    <%= link_to 'すべて', list_index_path(:show=>'all'), class: 'btn btn-primary btn-sm' %>
    <%= link_to '未完了', list_index_path, class: 'btn btn-outline-primary btn-sm ml-2' %>
  <% else %>
    <%= link_to 'すべて', list_index_path(:show=>'all'), class: 'btn btn-outline-primary btn-sm' %>
    <%= link_to '未完了', list_index_path, class: 'btn btn-primary btn-sm ml-2' %>
  <% end %>
</div>

<div class="topPage">
  <div class="listWrapper">
    <% @lists.each do |list| %>
      <div class="list">
        <div class="list_header">
          <h2 class="list_header_title", data-toggle="tooltip" title="コミット日 <%= list.created_at.strftime('%Y/%m/%d') %>">
            <%= list.title %>
          </h2> 
          <div class="list_header_action">
            <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>&nbsp;
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: { confirm: "#{list.title}を削除して大丈夫ですか？" } %>
          </div>
        </div>

        <div class="audio-content">
          <%= audio_tag list.audio_url, :controls => true if list.audio? %>
        </div>

        <div class="cardWrapper">
          <% list.cards.each do |card| %>
            <%= link_to list_card_path(list, card), class:"cardDetail_link", remote: true do %>
              <div class="card">
                <h3 class="card_title"><%= card.title %></h3>
                <% if card.memo.size > 0 %>
                  <div class="card_detail is-exist"><i class="fas fa-bars"></i></div>
                <% end %>
              </div>
            <% end %>
          <% end %>

          <div class="addCard">
            <i class="far fa-plus-square"></i>
            <%= link_to "さらにカードを追加", new_list_card_path(list), class: "addCard_link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<!--モーダルウインドウ表示-->
<div id="show" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>